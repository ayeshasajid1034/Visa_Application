using VisaApplicationManager.Data;


@model IEnumerable<VisaApplicationManager.Models.VisaApplication>

@{
    ViewData["Title"] = "Visa Applications";
}

<h1>Visa Applications</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.VisaType)</th>
            <th>@Html.DisplayNameFor(model => model.CountryOfApplication)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationStatus)</th>
            <th>@Html.DisplayNameFor(model => model.SubmissionDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.VisaType)</td>
                <td>@Html.DisplayFor(modelItem => item.CountryOfApplication)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.SubmissionDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ApplicationId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ApplicationId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ApplicationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
